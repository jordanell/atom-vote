<!-- Render the sharing options -->
<%= render partial: 'polls/share' %>

<!-- Render the poll results -->
<div class="poll-results-wrapper">
  <div class="poll-data">
    <h2>
      <%= @poll.question %>
    </h2>

    <!-- React results -->
    <%= react_component('PollResult', { poll: PollSerializer.new(@poll) }, { prerender: true }) %>
  </div>
  <div class="poll-meta">
    <h4>Total Votes</h4>
    <p>
      <%= @poll.votes.size %>
    </p>
    <h4>Last Vote</h4>
    <p>
      <% if @poll.votes.size > 0 %>
        <%= time_ago_in_words(@poll.votes.last.created_at) %>
      <% else %>
        Never
      <% end %>
    </p>
  </div>
</div>