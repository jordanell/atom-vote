<div class='intro-wrapper'>
  <div class='intro-content grid grid--full small-grid--full medium-grid--1of2 large-grid--fit'>
    <div class='intro-text grid-cell'>
      <h1 class='intro-text-header'>Welcome!</h1>
      <p>Enter your question and answers here. After creating the poll you'll be able to share it with other people. You'll also be able to vote.</p>
    </div>
    <%= simple_form_for @poll, html: { class: 'grid-cell' } do |f| %>
      <%= render partial: 'shared/form_errors', locals: { object: @poll } %>
      <div class='question-input-wrapper'>

        <%= f.input :question, label: false, placeholder: 'Enter your question here', autofocus: true %>
      </div>

      <ol id='js-add-option' class='options-list'>
        <% @poll.options.each_with_index do |option, index| %>
          <%= f.simple_fields_for :options, option do |o| %>
            <li><%= o.input :text, label: false, placeholder: 'Enter poll option' %></li>
          <% end %>
        <% end %>
      </ol>

      <div class='button-group'>
        <%= f.button :button, type: :submit, class: 'create-poll-button' do %>
          Create Poll
        <% end %>
      </div>
    <% end %>
  </div>
</div>
