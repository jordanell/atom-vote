<% if object.errors.full_messages.length > 0 %>
  <div class="form-errors-wrapper">
    <h5 class="form-errors-title"><%= "Error".pluralize(object.errors.messages.length)%></h5>
    <% if object.errors.messages.length > 0 %>
      <ul class="form-errors-list">
        <% object.errors.messages.values.each do |msg| %>
          <% msg.each do |m| %>
            <li><%= m %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>
